import pickle
import numpy as np
from sklearn.linear_model import LinearRegression

# Sample training data (area, bedrooms, bathrooms) and prices
X = np.array([
    [1000, 2, 1],
    [1500, 3, 2],
    [2000, 4, 2],
    [2500, 4, 3],
    [1200, 2, 2],
    [1800, 3, 2]
])
y = np.array([200000, 300000, 400000, 500000, 240000, 360000])

# Train a simple linear regression model
model = LinearRegression()
model.fit(X, y)

# Save the model to a .pkl file
model_path = "/mnt/data/house_price_model.pkl"
with open(model_path, "wb") as f:
    pickle.dump(model, f)

model_path
